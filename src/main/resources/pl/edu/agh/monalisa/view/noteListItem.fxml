<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" prefHeight="150.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="titleLabel" text="Label">
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" top="5.0"/>
            </VBox.margin>
        </Label>
        <TextArea prefHeight="200.0" prefWidth="200.0">
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
        </TextArea>
        <BorderPane prefHeight="0.0" prefWidth="0.0">
            <right>
                <HBox prefHeight="0.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="showButton" mnemonicParsing="false" text="Show"/>
                        <Button fx:id="copyButton" mnemonicParsing="false" text="Copy"/>
                    </children>
                </HBox>
            </right>
            <VBox.margin>
                <Insets right="10.0" top="10.0"/>
            </VBox.margin>
        </BorderPane>
    </children>
</VBox>
